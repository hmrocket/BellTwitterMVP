<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="tweet"
                type="com.twitter.sdk.android.core.models.Tweet"/>
    </data>
    <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            tools:ignore="KeyboardInaccessibleWidget,PrivateResource"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="15dp">

            <include
                    bind:user="@{tweet.user}"
                    layout="@layout/item_userinfo"/>

            <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:duplicateParentState="true"
                    android:textSize="16sp"/>

            <ImageView
                    android:id="@+id/tweetPhotoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/picHeight"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/tweet_photo_contentDescriptor"
                    android:duplicateParentState="true"
                    android:scaleType="fitCenter"/>

            <TextView
                    android:id="@+id/retweetTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif-thin"/>

            <include
                    bind:tweet="@{tweet}"
                    layout="@layout/item_interaction"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>