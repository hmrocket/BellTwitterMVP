<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="user"
                type="com.twitter.sdk.android.core.models.User"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

        <ImageView
                android:id="@+id/userProfilePicImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                bind:imageUrl="@{user.profileBackgroundImageUrlHttps}"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="@string/profile_pic_contentDescriptor"/>

        <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:textSize="17sp"
                android:text="@{user.name}"
                tools:text="Donald Trump"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/userScreenNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                tools:text="\@POTUS"
                android:text="@{user.screenName}"
                android:fontFamily="sans-serif-thin"
                android:textSize="15sp"
                android:textStyle="bold"/>

    </LinearLayout>
</layout>